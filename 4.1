#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void selection_sort(int *dizi,int N){
    
	int i,j,max,temp;
    
    for (i=0;i<N-1;i++){
    
	    max=i;
    
	    for (j=i+1;j<N;j++){
    
	        if (*(dizi+j)>*(dizi+max)){
                max=j;
            }
        }
        temp=*(dizi+i);
        *(dizi+i)=*(dizi+max);
        *(dizi+max)=temp;
    }
}

int main(){
	
    int dizi[20];
    int i,N=20;
    
    srand(time(NULL));
    
    printf("Dizinin Ilk Hali\n");
	for (i=0;i<N;i++){
        dizi[i]=rand()%101;
        printf(" %d ",dizi[i]);
    }
    printf("\n");
    
    
    selection_sort(dizi,N);
    
    printf("Siralanmis Hali\n");
    for (i=0;i<N;i++){
        printf(" %d ",dizi[i]);
    }
    printf("\n");
    
    return 0;
}
