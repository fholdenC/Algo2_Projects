#include <stdio.h>
#include <stdlib.h>

int toplama(int sayi)
{
	int toplam=0;
	
	if(sayi==0)
	{
		return toplam;
	}
	else
	{
		return toplam = sayi + toplama(sayi-1);
	}
}


    int main(){
    	
    	int sayi;
    	
    	printf("Sayi Giriniz:");
    	scanf("%d",&sayi);
    	
    	printf("Toplam:%d",toplama(sayi));
    	
    	    	
    	return 0;
	}
