#include <stdio.h>
#include <stdlib.h>

    int main(){
    	
    	int sayi,i,*ptr1;
    	int sayac1=0;
    	
    	
    	ptr1=(int*)malloc(sizeof(int));
    	
    	printf("!!!Programdan Cikmak Icin Negatif Sayi Giriniz!!!\n");
		do
		{
			printf("Sayi Giriniz:");
			scanf("%d",&sayi);
			
		
			if(sayi%3==0 && sayi%5==0)  //3'e ve 5'e bolunenler...
			{
				sayac1++;
				ptr1=(int*)realloc(ptr1,sayac1*sizeof(int)); //3'e ve 5'e bolunen sayılar için bellekten yer ayırır...
				for(i=sayac1;i<sayac1+1;i++)
				{
					*(ptr1+i-1)=sayi;
				}
			}	
				
		}while(sayi>0);
    	
		printf("3'e ve 5'e bolunenler:");
    	for(i=0;i<sayac1;i++)
    	{
    		printf(" %d ",*(ptr1+i));
		}
    	
    	free(ptr1);
    	
    	return 0;
	}
